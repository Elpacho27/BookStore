@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Create Product
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" style="color:white !important" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Autor" class="form-control border-0 shadow" />
                    <label asp-for="Autor" class="ms-2"></label>
                    <span asp-validation-for="Autor" style="color:white !important" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" style="color:white !important" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="YearOfPublish" class="form-control border-0 shadow" />
                    <label asp-for="YearOfPublish" class="ms-2"></label>
                    <span asp-validation-for="YearOfPublish" style="color:white !important" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" style="color:white !important" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Picture" class="form-control border-0 shadow" />
                    <label asp-for="Picture" class="ms-2"></label>
                    <span asp-validation-for="Picture" style="color:white !important" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="NumberOfPages" class="form-control border-0 shadow" />
                    <label asp-for="NumberOfPages" class="ms-2"></label>
                    <span asp-validation-for="NumberOfPages" style="color:white !important" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Category" class="form-control border-0 shadow" />
                    <label asp-for="Category" class="ms-2"></label>
                    <span asp-validation-for="Category" style="color:white !important" class="text-danger"></span>
                </div>


                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control"> Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
