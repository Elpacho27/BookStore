@model List<Product>

@{
    ViewData["Title"] = "Products Page";
}



<div class="container">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" id="titleproductlist">
                Product list
            </h2>

        </div>

        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @product.Name
                </td>
                <td>
                    @product.Description
                </td>
                <td>
                    <div class="w-75 btnbtn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-categoryId="@product.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>

                        <a asp-controller="Product" asp-action="Delete" asp-route-categoryId="@product.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>

            </tr>

        }
    </tbody>
</table>